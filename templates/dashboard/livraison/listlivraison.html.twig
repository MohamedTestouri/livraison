{% extends "baseBack.html.twig" %}

{% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>DataTables</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">DataTables</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Livraison</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>ID</th>
                   
                    <th>etatLivraison</th>
                    <th>dateLivraison</th>
                  <th>adresseCommande</th>
                     <th>PrixLivraison</th>
                      <th>Livreur</th>
                      <th>Vehicule</th>
                      
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                      {% for class in tab %}
                  <tr>
                  <td>{{class.id}}</td>
      
       
                  {% if class.etatLivraison == 1 %}
                    <td>Livrée </td>
                    {% else %}
                    <td>Non Livrée </td>
                    {% endif %}
               <td>{{class.dateLivraison|date('Y-m-d')}}</td>
                  <td>{{class.Commande.adresse}}</td>
               

           
               
                <td>{{class.PrixLivraison}}</td>
              
                 
                     
                     
                    <td>{{class.livreur.Email }} </td>
                     <td>{{class.Vehicule.getVehicule() }} </td>
           

                     
                    
                   
               
                <td><a  class="btn btn-warning" href="{{path("livraison_delete",{'id':class.id}) }}">Delete</a>
                <a class="btn btn-info" href="{{path("livraison_update",{'id':class.id}) }}">Update</a></td>
    
      </tr>
      {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
          <div class="col-md-9">
            <div class="card card-primary">
              <div class="card-body p-0">
                <!-- THE CALENDAR -->
                <div id="calendar"></div>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}

{% block javascripts %}

{{parent()}}
  <script src='{{ asset("plugins/fullcalendar/main.js") }}'></script>
  <script>

    document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        headerToolbar: {
          left  : 'prev,next today',
          center: 'title',
          right : 'dayGridMonth,timeGridWeek,timeGridDay'
        },
        initialView: 'dayGridMonth',
        timeZone: 'UTC',
        events: [

          {% for class in tab %}
          {
            title          : '{{ class.livreur.Email }}',
            start          : '{{class.dateLivraison|date('Y-m-d')}}',
            backgroundColor: '#f56954', //red
            borderColor    : '#f56954', //red
            allDay         : true
          },
          {
            title          : '{{class.Vehicule.getVehicule() }}',
            start          : '{{class.dateLivraison|date('Y-m-d')}}',
            backgroundColor: '#54aaf5', //red
            borderColor    : '#54aaf5', //red
            allDay         : true
          },
          {% endfor %}
        ],
      });
      calendar.render();
    });

  </script>
