{% extends 'baseBack.html.twig' %}
{% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Ajouter Vehicule</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->

                {{ form_start(FCamion,{'attr': {'novalidate': 'novalidate'}} ) }}

                <div class="card-body">
                  
                 
                  <div class="form-group">
                    <label for="exampleInputPassword1">Matricule </label>
                    {{ form_widget(FCamion.matricule, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(FCamion.matricule, {'attr': {"class":"mb-0"}}) }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Couleur </label>
                    {{ form_widget(FCamion.couleur, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(FCamion.couleur, {'attr': {"class":"mb-0"}}) }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Type Vehicule </label>
                    {{ form_widget(FCamion.typeVehicule, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(FCamion.typeVehicule, {'attr': {"class":"mb-0"}}) }}
                  </div>
                   <div class="form-group">
                    <label for="exampleInputPassword1">Marque </label>
                    {{ form_widget(FCamion.marque, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(FCamion.marque, {'attr': {"class":"mb-0"}}) }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Derrniere Date d'Entretient </label>
                    {{ form_widget(FCamion.DateEntretient) }}
                    {{ form_errors(FCamion.DateEntretient, {'attr': {"class":"mb-0"}}) }}
                  </div>
               
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                 {{ form_widget(FCamion.Ajouter, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
             {{ form_end(FCamion) }}
            </div>
            <!-- /.card -->

          

          </div>

        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
{% endblock %}